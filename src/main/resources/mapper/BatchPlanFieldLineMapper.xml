<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hand.hdsp.quality.infra.mapper.BatchPlanFieldLineMapper">
    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap id="BaseResultMap" type="com.hand.hdsp.quality.domain.entity.BatchPlanFieldLine">
        <result column="plan_field_line_id" property="planFieldLineId" jdbcType="DECIMAL"/>
        <result column="plan_field_id" property="planFieldId" jdbcType="DECIMAL"/>
        <result column="check_item" property="checkItem" jdbcType="VARCHAR"/>
        <result column="check_way" property="checkWay" jdbcType="VARCHAR"/>
        <result column="compare_way" property="compareWay" jdbcType="VARCHAR"/>
        <result column="expected_value" property="expectedValue" jdbcType="VARCHAR"/>
        <result column="regular_expression" property="regularExpression" jdbcType="VARCHAR"/>
        <result column="tenant_id" property="tenantId" jdbcType="DECIMAL"/>
        <result column="object_version_number" property="objectVersionNumber" jdbcType="DECIMAL"/>
        <result column="creation_date" property="creationDate" jdbcType="TIMESTAMP"/>
        <result column="created_by" property="createdBy" jdbcType="DECIMAL"/>
        <result column="last_updated_by" property="lastUpdatedBy" jdbcType="DECIMAL"/>
        <result column="last_update_date" property="lastUpdateDate" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="list" resultType="com.hand.hdsp.quality.api.dto.RuleLineDTO">
        select
        xrl.check_item
        from xqua_rule_line xrl
        <where>
            check_item not in
            <foreach item="checkItem" collection="checkItem" separator="," open="(" close=")" index="">
                #{checkItem, jdbcType=VARCHAR}
            </foreach>
        </where>
    </select>
</mapper>
