<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hand.hdsp.quality.infra.mapper.FieldStandardMatchsMapper">
	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap id="BaseResultMap" type="com.hand.hdsp.quality.domain.entity.FieldStandardMatchs">
        <result column="id" property="id" jdbcType="DECIMAL"/>
        <result column="batch_number" property="batchNumber" jdbcType="VARCHAR"/>
        <result column="data_count" property="dataCount" jdbcType="DECIMAL"/>
        <result column="status" property="status" jdbcType="VARCHAR"/>
        <result column="project_id" property="projectId" jdbcType="DECIMAL"/>
        <result column="tenant_id" property="tenantId" jdbcType="DECIMAL"/>
        <result column="object_version_number" property="objectVersionNumber" jdbcType="DECIMAL"/>
        <result column="creation_date" property="creationDate" jdbcType="TIMESTAMP"/>
        <result column="created_by" property="createdBy" jdbcType="DECIMAL"/>
        <result column="last_updated_by" property="lastUpdatedBy" jdbcType="DECIMAL"/>
        <result column="last_update_date" property="lastUpdateDate" jdbcType="TIMESTAMP"/>
    </resultMap>
    <sql id="Base_Columns">
        ${prefix}.id,
        ${prefix}.batch_number,
        ${prefix}.data_count,
        ${prefix}.status,
        ${prefix}.project_id,
        ${prefix}.tenant_id,
        ${prefix}.object_version_number,
        ${prefix}.creation_date,
        ${prefix}.created_by,
        ${prefix}.last_updated_by,
        ${prefix}.last_update_date
    </sql>
    <select id="listAll" resultType="com.hand.hdsp.quality.api.dto.FieldStandardMatchsDTO">
        <bind name="datasourceType" value="@com.hand.hdsp.core.util.SpringDatasourceHelper@getDatasourceType()"/>
        select
        <include refid="Base_Columns">
            <property name="prefix" value="xfsm"/>
        </include>
        from xsta_field_standard_matchs xfsm
        <where>
            <if test="tenantId != null">
                AND xfsm.tenant_id = #{tenantId}
            </if>
            <if test="projectId !=null">
                AND xfsm.project_id = #{projectId}
            </if>
            <if test="batchNumber !=null and batchNumber != ''">
                <bind name="batchNumberLike" value="'%' + batchNumber + '%'"/>
                AND xfsm.batch_number like #{batchNumberLike}
            </if>
            <if test="dataCount != null">
                AND xfsm.data_count = #{dataCount}
            </if>
            <if test="status != null">
                AND xfsm.status = #{status}
            </if>
            <choose>
                <when test="datasourceType == 'ORACLE'">
                    <if test="startDate!=null">
                        <![CDATA[   and xfsm.creation_date >=  to_date(#{startDate}, 'yyyy-mm-dd hh24:mi:ss')   ]]>
                    </if>
                    <if test="endDate !=null">
                        <![CDATA[   and xfsm.creation_date <=  to_date(#{endDate}, 'yyyy-mm-dd hh24:mi:ss')   ]]>
                    </if>
                </when>
                <when test="datasourceType == 'MYSQL'">
                    <if test="startDate!=null">
                        <![CDATA[  and xfsm.creation_date >=
                        DATE_FORMAT(#{startDate}, '%Y-%m-%d %H:%T:%s')   ]]>
                    </if>
                    <if test="endDate!=null">
                        <![CDATA[  and xfsm.creation_date <=
                        DATE_FORMAT(#{endDate} , '%Y-%m-%d %H:%T:%s')    ]]>
                    </if>
                </when>
            </choose>
        </where>
    </select>
</mapper>