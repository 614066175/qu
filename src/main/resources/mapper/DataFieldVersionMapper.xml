<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hand.hdsp.quality.infra.mapper.DataFieldVersionMapper">
	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap id="BaseResultMap" type="com.hand.hdsp.quality.domain.entity.DataFieldVersion">
        <result column="version_id" property="versionId" jdbcType="DECIMAL"/>
        <result column="field_id" property="fieldId" jdbcType="DECIMAL"/>
        <result column="group_id" property="groupId" jdbcType="DECIMAL"/>
        <result column="field_name" property="fieldName" jdbcType="VARCHAR"/>
        <result column="field_comment" property="fieldComment" jdbcType="VARCHAR"/>
        <result column="sys_common_name" property="sysCommonName" jdbcType="VARCHAR"/>
        <result column="standard_desc" property="standardDesc" jdbcType="VARCHAR"/>
        <result column="field_type" property="fieldType" jdbcType="VARCHAR"/>
        <result column="field_length" property="fieldLength" jdbcType="VARCHAR"/>
        <result column="data_pattern" property="dataPattern" jdbcType="VARCHAR"/>
        <result column="value_type" property="valueType" jdbcType="VARCHAR"/>
        <result column="value_range" property="valueRange" jdbcType="VARCHAR"/>
        <result column="charge_dept_id" property="chargeDeptId" jdbcType="DECIMAL"/>
        <result column="charge_id" property="chargeId" jdbcType="DECIMAL"/>
        <result column="charge_tel" property="chargeTel" jdbcType="VARCHAR"/>
        <result column="charge_email" property="chargeEmail" jdbcType="VARCHAR"/>
        <result column="version_number" property="versionNumber" jdbcType="DECIMAL"/>
        <result column="tenant_id" property="tenantId" jdbcType="DECIMAL"/>
        <result column="object_version_number" property="objectVersionNumber" jdbcType="DECIMAL"/>
        <result column="creation_date" property="creationDate" jdbcType="TIMESTAMP"/>
        <result column="created_by" property="createdBy" jdbcType="DECIMAL"/>
        <result column="last_updated_by" property="lastUpdatedBy" jdbcType="DECIMAL"/>
        <result column="last_update_date" property="lastUpdateDate" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="baseColumn">
        ${dfv}.creation_date,
        ${dfv}.created_by,
        ${dfv}.last_update_date,
        ${dfv}.last_updated_by,
        ${dfv}.object_version_number,
        ${dfv}.version_id,
        ${dfv}.field_id,
        ${dfv}.group_id,
        ${dfv}.field_name,
        ${dfv}.field_comment,
        ${dfv}.standard_desc,
        ${dfv}.field_type,
        ${dfv}.field_length,
        ${dfv}.data_pattern,
        ${dfv}.value_type,
        ${dfv}.value_range,
        ${dfv}.charge_dept_id,
        ${dfv}.charge_id,
        ${dfv}.charge_tel,
        ${dfv}.charge_email,
        ${dfv}.version_number,
        ${dfv}.tenant_id
    </sql>

    <select id="detail" resultType="com.hand.hdsp.quality.api.dto.DataFieldVersionDTO">
        SELECT
        iu.login_name lastUpdateName,
        iu2.login_name chargeName,
        hu.unit_name chargeDeptName,
        xsg.group_name,
        <include refid="baseColumn">
            <property name="dfv" value="dfv"/>
        </include>
        FROM
        xsta_data_field_version  dfv
        left join xsta_standard_group xsg on xsg.group_id=dfv.group_id
        left join hzero_platform.iam_user iu on dfv.last_updated_by=iu.id
        left join hzero_platform.iam_user iu2 on dfv.charge_id=iu2.id
        left join hzero_platform.hpfm_unit hu on hu.unit_id=dfv.charge_dept_id
        WHERE
        dfv.version_id = #{versionId}
    </select>

    <select id="list" resultType="com.hand.hdsp.quality.api.dto.DataFieldVersionDTO">
        SELECT
        iu.login_name lastUpdateName,
        iu2.login_name chargeName,
        hu.unit_name chargeDeptName,
        xsg.group_name,
        <include refid="baseColumn">
            <property name="dfv" value="dfv"/>
        </include>
        FROM
        xsta_data_field_version  dfv
        left join xsta_standard_group xsg on xsg.group_id=dfv.group_id
        left join hzero_platform.iam_user iu on dfv.last_updated_by=iu.id
        left join hzero_platform.iam_user iu2 on dfv.charge_id=iu2.id
        left join hzero_platform.hpfm_unit hu on hu.unit_id=dfv.charge_dept_id
        WHERE
        <if test="dataFieldVersionDTO.fieldId!=null">
            dfv.standard_id=#{dataFieldVersionDTO.fieldId}
        </if>
        <if test="dataFieldVersionDTO.versionId!=null">
            dfv.version_id = #{dataFieldVersionDTO.versionId}
        </if>
    </select>
</mapper>